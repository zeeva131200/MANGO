<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:text="NAME"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="HAS REQUESTED TO JOIN THIS RIDE"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/imageView"
            android:text="Details:"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="101dp"
            android:layout_toEndOf="@+id/booking"
            android:text="" />

        <TextView
            android:id="@+id/pickup"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test"
            android:layout_marginStart="17dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/booking"
            android:text="Pickup"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test"
            android:layout_marginStart="149dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/booking"
            android:text="Destination"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/test"
            android:layout_marginStart="98dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/booking"
            android:text=">>"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Booking"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/booking"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/seatNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="Seat No:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/D_iD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time"
            android:layout_marginStart="178dp"
            android:layout_marginTop="-10dp"
            android:layout_toEndOf="@+id/imageView"
            android:text="P_id:"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/rejectBtn"
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="0dp"
            android:background="@color/green"
            android:backgroundTint="@null"
            android:theme="@style/YourColorButton"
            android:text="Reject" />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="190dp"
            android:layout_marginBottom="0dp"
            android:background="@color/red"
            android:backgroundTint="@null"
            android:text="Accept"
            android:theme="@style/ThemeOverlay.Material3.DynamicColors.DayNight" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>